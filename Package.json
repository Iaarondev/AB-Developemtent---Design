{
  "name": "ab-development-design",
  "version": "1.0.0",
  "description": "AB Development & Design Website",
  "scripts": {
    "test": "jest --config src/scripts/tests/test.config.js",
    "test:watch": "jest --config src/scripts/tests/test.config.js --watch",
    "test:coverage": "jest --config src/scripts/tests/test.config.js --coverage",
    "test:clear": "jest --clearCache",
    "test:report": "powershell -File scripts/tools/generate-reports.ps1",
    "test:update": "jest --config src/scripts/tests/test.config.js -u",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --config src/scripts/tests/test.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-transform-modules-commonjs": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "babel-jest": "^29.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^13.2.0",
    "jest-watch-typeahead": "^2.2.2"
  }
}
